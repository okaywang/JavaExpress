<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="messageServiceChinese" class="di.ctxxml.hello.MessageServiceChinese"/>
    <bean id="messageServiceEnglish" class="di.ctxxml.hello.MessageServiceEnglish"/>
    <bean id="messagePrinter" class="di.ctxxml.hello.MessagePrinter">
        <constructor-arg ref="messageServiceChinese"/>
    </bean>
    <bean id="messagePrinterWithLog" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="proxyInterfaces">
            <list>
                <value>di.ctxxml.hello.MessageService</value>
            </list>
        </property>
        <property name="interceptorNames">
            <list>
                <value>logIntecepter</value>
            </list>
        </property>
        <property name="targetName" value="messageServiceEnglish"/>
    </bean>
    <bean id="logIntecepter" class="di.ctxxml.hello.LogIntecepter"></bean>
</beans>